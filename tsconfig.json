{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": [
      "es2015",
      "es2015.promise",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "./release",
    "sourceMap": true,
    "outDir": "./release",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/test/*.*"
  ]
}
